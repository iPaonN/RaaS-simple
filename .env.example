# Discord Bot Token (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Bot Prefix for text commands (optional, default: !)
PREFIX=!

# Development Guild ID (optional but recommended for testing)
# Slash commands sync instantly to this guild
# Get by right-clicking your server with Developer Mode enabled
DEV_GUILD_ID=123456789012345678

# Database URL (optional)
DATABASE_URL=sqlite:///data/bot.db

# Logging Level (optional, default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# MongoDB Configuration
MONGODB_URI=example_mongodb_uri
MONGO_INITDB_ROOT_USERNAME=example_mongodb_username
MONGO_INITDB_ROOT_PASSWORD=example_mongodb_password
MONGODB_DB=femrouter
MONGODB_ROUTER_COLLECTION=routers
MONGODB_TASK_COLLECTION=tasks

# RabbitMQ Configuration (optional)
RABBITMQ_URI=amqp://guest:guest@femrouter-rabbitmq:5672/
RABBITMQ_QUEUE=router_events
RABBITMQ_TASK_QUEUE=router_tasks
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest